{
  "compilerOptions": {
    "noImplicitAny": false,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "shared/*": ["./src/shared/*"]
    }
  },
  "include": [
    "config/data/requirement-functions/**/*",
    "src/**/*",
    "typings.d.ts"
  ],
  "exclude": [
    "node_modules",
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  }
}
  
