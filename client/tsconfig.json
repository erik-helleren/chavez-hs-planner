{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "shared/*": ["./src/shared/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true
  }
}
  
